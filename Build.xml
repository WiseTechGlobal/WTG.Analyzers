<?xml version="1.0"?>
<Build xmlns="http://wisetechglobal.com/DevTools/Build.xsd" MSBuild="15.0">
	<Solutions>
		<Solution Filename="WTG.Analyzers.sln" />
	</Solutions>
	<PreBuild>
		<Command cacheable="false">paket.exe restore</Command>
	</PreBuild>
	<PostBuild>
		<Command>packages\NuGet.CommandLine\tools\NuGet.exe pack WTG.Analyzers.nuspec -OutputDirectory Bin\NuGet</Command>
		<Command>packages\NuGet.CommandLine\tools\NuGet.exe pack WTG.Analyzers.TestFramework.nuspec -OutputDirectory Bin\NuGet</Command>
	</PostBuild>
	<Versioning>
		<CSharpAssemblyFileVersion>CommonAssemblyInfo.cs</CSharpAssemblyFileVersion>
	</Versioning>
	<BuildConfigurations>
		<Configuration BuildOnDat="true" TestOnDat="true">DEBUG</Configuration>
		<Configuration BuildOnDat="true" Publishable="true">RELEASE</Configuration>
	</BuildConfigurations>
</Build>
